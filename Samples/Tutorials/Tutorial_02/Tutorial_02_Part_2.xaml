<Page
    x:Class="Tutorial_02.Part2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tutorial_02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<StackPanel Margin="10, 30, 10, 10"
					Grid.Column="0"
					Grid.Row="0">

			<Button x:Name="ButtonSave"
					Content="Save Strokes"
					Background="LightBlue" 
					Foreground="White"
					Width="150"
					Margin="0, 10, 0, 10"
					Click="ButtonSave_Clicked" />

			<Button x:Name="ButtonLoad"
					Content="Load Strokes"
					Background="LightBlue"
					Foreground="White"
					Width="150"
					Margin="0, 10, 0, 10"
					Click="ButtonLoad_Clicked" />

			<Button x:Name="ButtonClear"
					Content="Clear Canvas"
					Background="Salmon"
					Foreground="White"
					Width="150"
					Margin="0, 10, 0, 10"
					Click="ButtonClear_Clicked"/>

		</StackPanel>

		<SwapChainPanel x:Name="DxPanel"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Grid.Column="1"
						Grid.Row="0" />

	</Grid>
</Page>
