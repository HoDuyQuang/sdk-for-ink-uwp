<Page
    x:Class="Tutorial_01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tutorial_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel Margin="10, 30, 10, 10"
					Grid.Column="0"
					Grid.Row="0">

			<TextBlock Text="Tutorial 1: Drawing with Pointing Devices"
					   FontSize="20" />

			<HyperlinkButton x:Name="ButtonPart1"
							 Content="Part 1: Ink Engine Setup"
							 Click="ButtonPart1_Clicked" />

			<HyperlinkButton x:Name="ButtonPart2"
							 Content="Part 2: Building Paths from Pointer Input"
							 Click="ButtonPart2_Clicked" />

			<HyperlinkButton x:Name="ButtonPart3"
							 Content="Part 3: Smoothing"
							 Click="ButtonPart3_Clicked" />

			<HyperlinkButton x:Name="ButtonPart4"
							 Content="Part 4: Preliminary Path"
							 Click="ButtonPart4_Clicked" />

			<HyperlinkButton x:Name="ButtonPart5"
							 Content="Part 5: Particle Brush"
							 Click="ButtonPart5_Clicked" />

			<HyperlinkButton x:Name="ButtonPart6"
							 Content="Part 6: Translucent Solid Color Brush"
							 Click="ButtonPart6_Clicked" />

		</StackPanel>

	</Grid>
</Page>
